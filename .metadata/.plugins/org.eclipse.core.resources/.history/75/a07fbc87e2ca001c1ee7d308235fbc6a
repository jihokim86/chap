package chap3;

public class BitShiftExample {

	public static void main(String[] args) {
		
		// 비트 이동 연산자
		System.out.println("1<<3="+ (1<<3)); //8
		System.out.println("-8>>3="+ (-8>>3)); //-1
		
		//10진수 8 -> (00001000)
		//		  -> (11110111)
		//		  -> 2의보수적용
		//		  -> (11111000) -> 10진수 -8
		//(-8>>3) 오른쪽으로 3칸 이동 -> (11111111) -> 10진수로 표현하려면?
		//(1)(1111111) -> (1)(0000000) -> 2의보수적용 -> (1)(0000001) -> -1
		
	}

}
