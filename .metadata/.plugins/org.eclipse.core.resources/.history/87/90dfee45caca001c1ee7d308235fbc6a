package chap3;

public class IncreaseDecreaseOpertorExample {

	public static void main(String[] args) {
		
		// 증감 연산자
		
		int x = 10;
		int y = 10;
		int z;
		
		System.out.println("-----------------------------");
		x++;
		++x;
		System.out.println("x="+x);
		
		System.out.println("-----------------------------");
		y++;
		++y;
		System.out.println("y="+y);
	}

}
